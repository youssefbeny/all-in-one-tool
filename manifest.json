{
  "manifest_version": 3,
  "name": "Gaming Tools Suite Complete",
  "version": "4.0",
  "description": "Suite complète: Timer speedrun, Subway Surfers, ZQSD/WASD, résolution 608x1080",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://yell0wsuit.page/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Gaming Tools Suite - Complete Edition",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://yell0wsuit.page/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}